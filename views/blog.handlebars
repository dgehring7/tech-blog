{{!-- Displays the post --}}
<div class="card text-center">
  <div class="card-header">By {{user.name}}</div>
  <div class="card-body">
    <h5 class="card-title">{{name}}</h5>
    <p class="card-text">
      {{blog_post}}
    </p>
  </div>
  <div class="card-footer text-muted">{{format_date date_created}}</div>
</div>

{{!-- Comments header --}}
<div class="container">
  <h4>Recent Comments:</h2>
</div>

{{!-- Checks for comments, and displays, which gets updated with every comment --}}
{{#each comments as |comment|}}
<div class="container">
  <div class="row comment-border">
    <div class="col-4">
      <p>By {{comment.user.name}}</p>
      <p>{{format_date comment.date_created}}</p>
    </div>
    <div class="col-8">
      <p>
        {{comment.content}}
      </p>
    </div>
  </div>
</div>
{{/each}}

{{!-- Form to comment on this post --}}
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3>Comment Here:</h3>

      <form class="form new-comment-form">
        <div class="form-group">
          <label for="post-content">Comment:</label>
          <textarea class="form-input" id="post-content" name="post-content"></textarea>
        </div>
        <div class="form-group">
          <button id='post_id' type="submit" class="btn btn-primary" value={{id}}>Post!</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/js/blog.js"></script>